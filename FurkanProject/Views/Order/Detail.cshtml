



@model FurkanProject.Core.Model.Entity.Order
@{
    ViewBag.Title = "Detail";
}

<h2>@Model.ID no'lu Siparişinizin Durumu : @Model.Status.Name</h2>
<hr />
<b>Banka Bilgileri</b>
<table class="table table-bordered">
    <tr>
        <td>Banka</td>
        <td>Banka İsmi</td>
    </tr>
    <tr>
        <td>IBAN No</td>
        <td> TR29839398289218923</td>
    </tr>
    <tr>
        <td>Alıcı Adı</td>
        <td>Gönderici Bilgileri</td>
    </tr>
</table>
@{ 
    if (Model.StatusID == 5)
    {
        <a href="/Order/Pay?id=@Model.ID" class="btn btn-success">Ödeme Yaptım</a>
    }
}
<hr />
<b>Sipariş Bilgileri</b>
<table class="table table-bordered">
    <tr>
        <td>Toplam</td>
        <td>@Model.TotalPrice.ToString("##,## $") </td>
    </tr>
    <tr>
        <td>Ürünler Toplamı</td>
        <td>@Model.TotalProductPrice.ToString("##,## $")</td>
    </tr>
    <tr>
        <td>İndirim Toplamı</td>
        <td>@Model.TotalDiscount.ToString("##,## $")</td>
    </tr>
    <tr>
        <td>Vergi Toplamı</td>
        <td>@Model.TotalTaxPrice.ToString("##,## $")</td>
    </tr>
</table>
<hr />
<b>Ürünler</b>
<table class="table table-bordered">
    <tr>
        <th>Ürün</th>
        <th>Adet</th>
    </tr>
    @{ 
        foreach(var item in Model.OrderProducts)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
            </tr>
        }
    }
</table>


